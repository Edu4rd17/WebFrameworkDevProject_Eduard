{% extends 'base.html.twig' %}

{% block title %}Checkout index{% endblock %}

{% block body %}
    <h1>Checkout index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>AccountHolderName</th>
            <th>CardNumber</th>
            <th>ExpiryDate</th>
            <th>SecurityCode</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for checkout in checkouts %}
            <tr>
                <td>{{ checkout.accountHolderName }}</td>
                <td>{{ checkout.cardNumber }}</td>
                <td>{{ checkout.expiryDate ? checkout.expiryDate|date('Y-m-d') : '' }}</td>
                <td>{{ checkout.securityCode }}</td>
                <td>
                    <a href="{{ path('app_checkout_show', {'id': checkout.id}) }}">show</a>
                    <a href="{{ path('app_checkout_edit', {'id': checkout.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_checkout_new') }}">Create new</a>
{% endblock %}
