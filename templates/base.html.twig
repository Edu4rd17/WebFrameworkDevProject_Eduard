<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        @import "/../stylesheets/common.css";
        @import "/../stylesheets/menu.css";
    </style>
    <title>{% block title %}{% endblock %}</title>
    <script src="/../javascript/script.js" defer></script>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>âš«</text></svg>">

    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <!-- BOOTSTRAP 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- BOOTSTRAP 5 JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}

</head>
<body>
<header>
    <nav class="navbar">
        <div class="nav-branding">Edya Restaurant</div>
        <ul class="nav-menu">
            <li class="nav-item">
                <a href="{{ path("default") }}" class="nav-link active" aria-current="page">
                    Home
                </a>
            </li>
            <li class="nav-item">
                <a href="{{ path("app_product_index") }}" class="nav-link">
                    Menu
                </a>
            </li>
            {% if app.user == false %}
                <li class="nav-item">
                    <a href="{{ path("app_login") }}" class="nav-link">
                        Login
                    </a>
                </li>
            {% endif %}
            {% if app.user == false %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("app_register") }}">
                        Register
                    </a>
                </li>
            {% endif %}
            {% if app.user %}
                <li class="nav-item">
                    <a href="{{ path('user_show', {'id': app.user.id}) }}" class="nav-link">{{ app.user.firstname }}</a>
                </li>
            {% endif %}
            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                </li>
            {% endif %}
        </ul>
        <div class="hamburger">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
    </nav>
</header>

{#<div class="container">#}
{#    <div class="row">#}
{#        <div class="col-sm-12">#}
            {% block body %}{% endblock %}
{#        </div>#}
{#    </div>#}
{#</div>#}

</body>
</html>
